{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "solid-auth-client":  ["src/assets/solid-auth-client.bundle.js"]
    }
  },
  "include": [
    "src",
    "types/jsx.d.ts",
    "src/assets/rdflib.min.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
